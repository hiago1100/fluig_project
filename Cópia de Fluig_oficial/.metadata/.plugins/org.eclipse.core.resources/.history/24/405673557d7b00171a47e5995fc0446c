                    $('.selecioneHid').removeClass('hide');
                    $(".allProgramas").addClass('hide');
                   
                    
                } else {
                    $('.revisa').addClass('hide');
                    $('#copia, .allProgramas').removeClass('hide');
                    $('.controle').removeClass('hide');
                    $('.selecioneHid').removeClass('hide');
