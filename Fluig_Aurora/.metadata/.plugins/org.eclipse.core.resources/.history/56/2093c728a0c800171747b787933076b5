function setaUltimaLinha(){
	$('input[id^="codItem___"]').each(function(){
		var context = $(this);
		ultimaLinha = parseInt(context.attr('id').split('___')[1]);    

	});
}

function ReadInputArea(){
	$('.respArea').each(function(i){
		if ($(this).val() !="" || $(this).val() == null){
			$(this).attr('readonly', true);
		}
	});
}