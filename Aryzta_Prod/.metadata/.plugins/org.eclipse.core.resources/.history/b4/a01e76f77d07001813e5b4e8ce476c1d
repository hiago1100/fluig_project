        sql: "com.arquimeda.marvin.server.js.Sql-v1"
    });
    
    var script = "SELECT cod_usuario FROM  V_ARY_PROGRAMAS_USUARIO; ";
    
    if(cod != ""){
        script =         " select DISTINCT * from V_ARY_PROGRAMAS_USUARIO"+ 
        "WHERE cod_usuario = 'dfaria' AND GR_CONFL IS NOT NULL"   ;
        	
//        	"select DISTINCT"+    
